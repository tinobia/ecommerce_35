<h2><%= t"edit" %><%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t "devise.register.edit.content_1" %><%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i><% t "devise.register.edit.content_2" %></i><br />
    <%= f.password_field :password, autocomplete: t ("view_off") %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %><%= t "devise.register.edit.content_3" %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: t ("view_off") %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i><%= t "devise.register.edit.content_4" %></i><br />
    <%= f.password_field :current_password, autocomplete: t ("view_off") %>
  </div>

  <div class="actions">
    <%= f.submit t ("update") %>
  </div>
<% end %>

<h3><%= t "cancel_account" %></h3>

<p><%= t "unhappy" %><%= button_to t ("cancel_account"), registration_path(resource_name), data: { confirm: t ("sure") }, method: :delete %></p>

<%= link_to t ("back"), :back %>
